@model CargoLogistic.WebUI.Models.RegisterViewModel


@{
    ViewBag.Title = "Register Role";
}

@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new Role.</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.Label("Select User", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
           @Html.DropDownList("UserName" )
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Select Role", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("RoleName")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="AddRole" />
        </div>
    </div>
}
