@model CargoLogistic.WebUI.Models.SearchPostCargoModel

@{
    ViewBag.Title = "PostCargoSearch";
}

<h2>PostCargoSearch</h2>


@using (Ajax.BeginForm("PostCargoSearch","Home", new AjaxOptions{HttpMethod = "POST", UpdateTargetId = "divList"})) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SearchPostCargoModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CountryFrom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CountryFrom", (SelectList)ViewBag.CountryFrom, new { @class="form-control" })
                @Html.ValidationMessageFor(model => model.CountryFrom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div id="divList"></div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
